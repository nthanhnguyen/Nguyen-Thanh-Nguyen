<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create A User</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create" class="active">Create Users</a>
    </div>

    <div class="container">
        <div class="form-add-new">
            <form action="/create-user" method="post">
                <fieldset>
                    <legend>Add new users</legend>

                    <div class="message success" style="display: none;">
                        <p>
                            <%= typeof message !=='undefined' && message ? message : '' %>
                        </p>
                        <a href="/">Go to Homepage</a>
                    </div>

                    <% if (typeof error !=='undefined' && error) { %>
                        <div class="message error" style="display: none;">
                            <p>
                                <%= error %>
                            </p>
                        </div>
                        <% } %>

                            <div class="input-group">
                                <label>Email:</label>
                                <input type="text" id="emailId" name="email" required>
                            </div>
                            <div class="input-group">
                                <label>Name:</label>
                                <input type="text" name="name" required>
                            </div>
                            <div class="input-group">
                                <label>Age:</label>
                                <input type="number" name="age">
                            </div>
                            <div class="input-group">
                                <label>City:</label>
                                <input type="text" name="city">
                            </div>

                            <div class="button-group">
                                <button type="submit">Save</button>
                            </div>
                </fieldset>
            </form>
        </div>
    </div>
    <!-- Include the message handler script -->
    <script src="/js/messageHandler.js"></script>
</body>

</html>